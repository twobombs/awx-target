FROM ubuntu:20.04
RUN apt-get update && export DEBIAN_FRONTEND=noninteractive && apt -y install openssh-server bash docker.io && apt clean all
RUN curl -s https://install.zerotier.com | bash
RUN rm /var/lib/zerotier-one/identity.public && rm /var/lib/zerotier-one/identity.secret
COPY run /root/run 
RUN chmod 744 /root/run
EXPOSE 22
ENTRYPOINT /root/run
